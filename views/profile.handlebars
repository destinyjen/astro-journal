<body>
{{!-- Title --}}
    <div class="container-for-title">
    <h1 class="title">Welcome, {{name}}</h1>
    <h2 class="subtitle">Tell us what's on your mind about anything astrology!</h2>
    </div>
{{!-- Blog Post section --}}
  <section class="section">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input class="input" type="text" placeholder="Name of your post" id="title">
      </div>
    </div>

    <div class="field">
      <label class="label">Image</label>
        <input class="input" type="email" placeholder="Post a link to an image if you have one!">
      </div>
    </div>

    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea class="textarea" placeholder="Talk about your finding" id="blogContent"></textarea>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link" id="submitBlog">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">Clear</button>
      </div>
    </div>
  </section>

  {{#if blogs.length}}
  <div id="your-blogs">
  <h2>Active Posts</h2>
  {{#each blogs as |blog|}}
  <div>
      <div>
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div>
        <button class="button is-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  {{/if}}
  </div>
</body>
<script src="/js/blog.js"></script>
